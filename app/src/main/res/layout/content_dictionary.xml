<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.assignment.englishdictionary.DictionaryActivity"
tools:showIn="@layout/activity_dictionary">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Synonyms"
        android:textColor="@color/primaryText"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_syn"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/synonyms_defn"
        android:textSize="15sp"
        android:textColor="@color/secondaryText"
   />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Antonyms"
        android:textColor="@color/primaryText"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_atyn"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/antonyms_defn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.317" />


</LinearLayout>

</ScrollView>